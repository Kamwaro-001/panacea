{
  "expo": {
    "name": "Panacea",
    "slug": "panacea",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/panacea-icon.png",
    "scheme": "panacea",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan patient wristband barcodes for medication administration."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/panacea-adaptive-icon.png",
        "backgroundImage": "./assets/images/panacea-adaptive-icon.png",
        "monochromeImage": "./assets/images/panacea-adaptive-icon.png"
      },
      "permissions": [
        "CAMERA"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.panacea.app"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/panacea-splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-secure-store",
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8b09cdf6-1492-41df-a7f4-87dbf34d521d"
      }
    }
  }
}
